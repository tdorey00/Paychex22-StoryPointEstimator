                      @bind-Value="text"  Variant="@Variant.Outlined" Clearable />
                        </MudItem>
                        <MudItem xs="12">
		                    Flight number: <b>@text</b>
                        </MudItem>
                    </MudGrid>
            </div>

            <button type="submit" class="btn btn-primary">Create Room</button>
            <a class="btn btn-primary" href="/">Cancel</a>
        </EditForm>
    </div>
</div>

