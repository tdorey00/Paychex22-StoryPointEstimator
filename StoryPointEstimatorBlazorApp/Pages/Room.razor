@page "/Room"

<div>
    <MudAppBar Class="appbar" @bind-Button="Voting_Mode">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        ScrumSpace - 
        <MudButton Link="/" Variant="Variant.Text" Class="appbar-buttons"> Home</MudButton> |
        <MudButton OnClick="Fibonacci_Voting" Variant="Variant.Text" Class="appbar-buttons"> Fibonacci Tool</MudButton> |
        <MudButton OnClick="FistFive_Voting" Variant="Variant.Text" Class="appbar-buttons"> Five to Five</MudButton> |
        <MudButton OnClick="TShirt_Voting" Variant="Variant.Text" Class="appbar-buttons"> T-Shirt Sizing</MudButton> |
        <MudButton Variant="Variant.Text" Class="appbar-buttons"> Timer</MudButton> |
        <MudButton OnClick="CustomScale_Voting" Variant="Variant.Text" Class="appbar-buttons"> Custom Voting</MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Settings" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Class="drawer">
        <a href="aboutUs" class="drawer">About Us</a>
    </MudDrawer>

</div>

<div class="mainContainer">
    <div class="button-label-container">
        <MudItem xs="12">
        <MudPaper Class="mud-paper-buttons" Height ="650px" Elevation="0">    
            @if(Voting_Mode==1) 
            {
                <MudItem xs="6">
                    <MudPaper Class="mud-paper-tool-name" Elevation="0">    
                        <MudText Class="mud-paper-tool-name"> Fibonacci Tool</MudText>
                    </MudPaper>
                </MudItem>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    ?</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    0</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    @half</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    1</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    2</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    3</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    5</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    8</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    13</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    20</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    40</MudButton>
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    100</MudButton>    
                <MudButton Link="" Variant="Variant.Filled"  Class="tool-buttons">
                    @coffee</MudButton>    

            }
            @if(Voting_Mode == 2)
            {
                <MudItem xs="6">
                    <MudPaper Class="mud-paper-tool-name" Elevation="0">    
                        <MudText Class="mud-paper-tool-name"> T-Shirt Sizing</MudText>
                    </MudPaper>
                </MudItem>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    XS</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    S</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    M</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    L</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    XL</MudButton>
            }
            @if(Voting_Mode == 3)
            {
                <MudItem xs="6">
                    <MudPaper Class="mud-paper-tool-name" Elevation="0">    
                        <MudText Class="mud-paper-tool-name"> Fist to Five</MudText>
                    </MudPaper>
                </MudItem>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    1</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    2</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    3</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
                    4</MudButton>
                <MudButton Variant="Variant.Filled" Class="tool-buttons">
