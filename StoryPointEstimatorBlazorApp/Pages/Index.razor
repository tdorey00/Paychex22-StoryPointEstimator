@page "/"
@inject NavigationManager nav;
    <img src="/css/LogoExample3.png" width=100 height=100/>

    <div class=buttons-container>
        
        <MudButton @onclick=createRoomNav Variant="Variant.Filled" Class="buttons create" Style="width: 300px; height: 300px; min-width: 300px;">
        <MudText Style="font-size: 36px; font-family: 'Ubuntu', sans-serif;">Create Room</MudText></MudButton>
        
        <MudButton @onclick=joinRoomNav Variant="Variant.Filled" Class="buttons join">
        <MudText Style="font-size: 24px; font-family: 'Ubuntu', sans-serif;">Join Room</MudText></MudButton>
    </div>


@code{
    private void createRoomNav()
    {
        nav.NavigateTo("createRoom");
    }

    private void joinRoomNav()
    {
        nav.NavigateTo("joinRoom");
    }

}

