@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="appbar">
        ScrumSpace 
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>

        <MudToggleIconButton Style="position: fixed; bottom: 0; right: 0;" @bind-Toggled="@_isDarkMode"
        Icon="@Icons.Filled.DarkMode" Color="@Color.Tertiary"
        ToggledIcon="@Icons.Filled.DarkMode" ToggledColor="@Color.Warning"/>

</MudLayout>
@code {
    private MudTheme _theme = new();
    public bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;
    
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }

}