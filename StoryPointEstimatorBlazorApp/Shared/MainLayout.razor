<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="appbar">
        ScrumSpace 
    </MudAppBar>

    <MudMainContent>
        @Body
